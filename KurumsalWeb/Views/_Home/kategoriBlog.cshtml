@using PagedList;
@using PagedList.Mvc;
@using KurumsalWeb.Helper;
@using KurumsalWeb.Models.Model.Entity
@model PagedList.IPagedList<blog>

@{
    ViewBag.Title = "kategoriBlog";
    Layout = "~/Views/Shared/_HomeLayoutGuncel.cshtml";
}

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">Blog</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <article>
                        <div class="post-image">
                            <div class="post-heading">
                                <!--Mevcut Kategoriler'den birine tıklandığında içerisinde olan blogların detaylı yazısına giden Link.-->
                                <h3><a href="/blog/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.blogID">@item.Baslik</a></h3>
                                @*<h3><a href="/_Home/BlogDetay/@item.blogID">@item.Baslik</a></h3>*@
                            </div>
                            <img src="@item.resimURL" alt="@item.Baslik" width="200" height="80" />
                        </div>
                        <p>
                            @Html.Raw(item.Icerik.Substring(0, 150))... @*İçerik Kısmının Sadece 150 Karakteri gözüksün *@
                        </p>
                        <div class="bottom-article">
                            <ul class="meta-post">
                                <li><i class="icon-folder-open"></i><a href="#">@item.Kategoriler.kategoriAdi</a></li>

                            </ul>
                            <a href="/_Home/BlogDetay/@item.blogID" class="pull-right">Devamını Oku..<i class="icon-angle-right"></i></a>
                        </div>
                    </article>
                }
            <div id="pagination">
                @Html.PagedListPager(Model, page => Url.Action("blog", new { page }), PagedListRenderOptions.Classic)
            </div>
            </div>
            <div class="col-lg-4">
                <aside class="right-sidebar">
                    <div class="widget">
                        <form class="form-search">
                            <input class="form-control" type="text" placeholder="Search..">
                        </form>
                    </div>
                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        @Html.Action("blogKategoriPV", "_Home")
                    </div>
                    @Html.Action("BlogSonKayitlarPV", "_Home")
                </aside>
            </div>
        </div>
    </div>
</section>



