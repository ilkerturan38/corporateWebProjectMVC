@using KurumsalWeb.Models.Model.Entity
@model List<Slider>


<section id="featured">
    <!-- start slider -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Slider -->
                <div id="main-slider" class="flexslider">
                    <ul class="slides">
                        @foreach (var item in Model)
                        {
                            <li>
                                <img src="@item.resimURL" alt="" />
                                <div class="flex-caption">
                                    <h3>@item.baslik</h3>
                                    <p>@item.aciklama</p>
                                    <a href="#" class="btn btn-theme">Devamını Oku</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <!-- end slider -->
            </div>
        </div>
    </div>
</section>